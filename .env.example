# Supabase Configuration (New instance for Flow blockchain)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Flow Blockchain Configuration
# Use 'testnet' for development, 'mainnet' for production
NEXT_PUBLIC_FLOW_NETWORK=testnet

# Flow Access Node (testnet)
NEXT_PUBLIC_FLOW_ACCESS_NODE=https://rest-testnet.onflow.org

# Flow Wallet Discovery (testnet)
NEXT_PUBLIC_FLOW_WALLET_DISCOVERY=https://fcl-discovery.onflow.org/testnet/authn

# WalletConnect Project ID (optional but recommended)
# Get one at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Crowdfunding Contract Address on Flow
# Update this after deploying the Cadence contract
NEXT_PUBLIC_CROWDFUNDING_CONTRACT_ADDRESS=0x...

# Cron Job Secret (for securing cron endpoints)
CRON_SECRET=your_random_secret_key

# Optional: Error Tracking (Sentry)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
